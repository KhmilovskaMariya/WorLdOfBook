@model IEnumerable<Core.ViewModels.AuthorBookViewModel>
@if (Model.Count() != 0)
{
    <button data-toggle="collapse" data-target="#demo">All Books</button>

    <div id="demo" class="collapse col-sm-6">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Language)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearOfPublication)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edition)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("GetAuthorBook", "Author", new { id = item.Id})">@Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearOfPublication)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edition)
                    </td>
                </tr>
            }

        </table>
    </div>
}