@model IEnumerable<Core.ViewModels.SearchBookViewModel>
<div>
    @using (Html.BeginForm("BookSearch", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <input type="text" name="query" />
        <input type="submit" value="Search" />
    }
    <div id="results">
        @if (Model.Count() == 0 && ViewBag.Flag == "False")
        {
            <div>There are no books for your request.</div>
        }
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <div>
                    @Html.DisplayFor(modelItem => item.Title)
                </div>

                <div>
                    @Html.DisplayFor(modelItem => item.Language)
                </div>

                <div>
                    @Html.DisplayFor(modelItem => item.Edition)
                </div>

                    <div>
                        @Html.DisplayFor(modelItem => item.YearOfPublication)
                    </div>

                    <div>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </div>
                    <div>
                        @Html.DisplayFor(model => item.Author.UserName)
                    </div>
                    <div>
                        <img src="~/File?id=@item.Image.FileId" alt="avatar" />
                    </div>
            }
        }
    </div>
</div>