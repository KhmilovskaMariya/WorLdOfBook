@model IEnumerable<Core.ViewModels.AdminUserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>All Users</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="@Url.Action("GetProfileForAdmin", "Reader", new { userId = item.Id })">@Html.DisplayFor(modelItem => item.UserName)</a>
                </td>
                <td>
                    <div class="container">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary" style="color:white">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    GiveRights <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">@Html.ActionLink("Give Moderator Rights", "GiveRights", new { id = item.Id, isModerator = true })</a></li>
                                    <li><a href="#">@Html.ActionLink("Give Admin Rights", "GiveRights", new { id = item.Id, isModerator = false })</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>