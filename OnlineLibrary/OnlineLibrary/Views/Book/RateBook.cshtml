@model Core.ViewModels.RateViewModel


@using (Html.BeginForm("RateBook", "Book", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <h4>Rate this book.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.RateMark, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RateMark, new { @class = "form-control" })
                    </div>
                </div>                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Rate" />
                    </div>
                </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


